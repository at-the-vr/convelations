---
import { Image } from 'astro:assets';

const { src, alt, caption } = Astro.props;
---

  <figure class="figure">
    <Image src={src} alt={alt} />
    <figcaption>{caption}</figcaption>
  </figure>

  <style>
    .figure {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  </style>